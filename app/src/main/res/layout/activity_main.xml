<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".MainActivity">


    <!--    android:src="@drawable/ic_baseline_account_balance_24"-->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="702dp"
        android:layout_height="450dp"

        android:background="@drawable/my_section"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/withdraw"
            android:layout_width="116dp"
            android:layout_height="52dp"
            android:layout_marginStart="163dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/my_selector"
            android:elevation="2dp"
            android:onClick="onClickWithdraw"
            android:text="@string/withdraw"
            android:textAlignment="center"
            android:textSize="11sp"
            android:textStyle="bold"
            android:theme="@style/BankTheme"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:id="@+id/deposit"
            android:layout_width="118dp"
            android:layout_height="51dp"
            android:layout_marginEnd="163dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/my_selector"
            android:onClick="onClickDeposit"
            android:text="@string/deposit"
            android:textAlignment="center"
            android:textSize="11sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="TouchTargetSizeCheck" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/header_title"
            android:layout_width="432dp"
            android:layout_height="0dp"
            android:background="@color/primary_dark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <TextView
                android:id="@+id/title"
                android:layout_width="159dp"
                android:layout_height="40dp"
                android:layout_marginStart="47dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:text="@string/myAtm"
                android:textColor="@color/icons"
                android:textSize="32sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="368dp"
            android:layout_height="0dp"
            android:layout_marginTop="166dp"
            android:layout_marginEnd="194dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/header_title">

            <ImageButton
                android:id="@+id/bank"
                android:layout_width="38dp"
                android:layout_height="match_parent"
                android:layout_marginStart="98dp"
                android:layout_marginEnd="87dp"
                android:layout_weight="1"
                android:background="@color/primary_dark"
                android:contentDescription="@string/account"
                android:src="@drawable/bank"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/balanceOut"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/accountOut"
                android:layout_width="102dp"
                android:layout_height="78dp"
                android:gravity="center"
                android:text="@string/outAccount"
                android:textSize="35sp"
                android:visibility="visible" />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/wallet_balance"
        android:layout_width="368dp"
        android:layout_height="0dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="113dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/wallet3"
            android:layout_width="101dp"
            android:layout_height="match_parent"
            android:layout_marginStart="98dp"
            android:layout_marginEnd="87dp"

            android:layout_weight="1"
            android:contentDescription="@string/money_in_hand"
            android:src="@drawable/wallet"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/balanceOut"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/balanceOut"
            android:layout_width="102dp"
            android:layout_height="78dp"
            android:gravity="center"
            android:text="@string/outBalance"
            android:textSize="35sp"
            android:visibility="visible" />
    </LinearLayout>

    <Spinner
        android:id="@+id/moneySpinner"
        android:layout_width="97dp"
        android:layout_height="39dp"
        android:layout_marginBottom="66dp"
        android:background="@color/divider"
        android:entries="@array/money_arr"
        android:focusable="true"
        android:isScrollContainer="true"
        android:popupBackground="@color/divider"
        android:theme="@style/BankTheme"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/wallet_balance"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="TouchTargetSizeCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>



